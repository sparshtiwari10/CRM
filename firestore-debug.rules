rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // EMERGENCY DEBUG RULES - DO NOT USE IN PRODUCTION
    // These rules allow all operations for authenticated users
    // Use only for debugging the permission issues
    
    match /{document=**} {
      // Allow all operations for any authenticated user
      allow read, write: if request.auth != null;
    }
  }
}
