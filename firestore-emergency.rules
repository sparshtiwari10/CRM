rules_version = '2';

// üö® EMERGENCY DEBUG RULES - DO NOT USE IN PRODUCTION
// These rules allow any authenticated user full access to all data
// Use ONLY for debugging when nothing else works
// Restore proper security rules immediately after testing

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read/write everything
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

/*
TO USE THESE EMERGENCY RULES:

